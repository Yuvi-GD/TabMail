<Page
    x:Class="TabMail.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <Page.Resources>
        <!-- Group header -->
        <DataTemplate x:Key="MonthHeaderTemplate">
            <Border Background="#141722" Padding="10,6" CornerRadius="8" Margin="8,8,8,4">
                <TextBlock Text="{Binding Key}" FontWeight="SemiBold"/>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="RootGrid" ColumnDefinitions="3*,7*">
        <!-- LEFT PANE -->
        <Grid x:Name="LeftPane" RowDefinitions="Auto,Auto,Auto,*" Grid.Column="0" Background="{StaticResource AppBackgroundBrush}">
            <!-- Toolbar -->
            <StackPanel Orientation="Horizontal" Spacing="8" Padding="10,10,10,6">
                <TextBlock Text="Inbox" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Button x:Name="RefreshBtn" Content="Refresh" Click="RefreshBtn_Click"/>
                <ComboBox x:Name="CountBox" Width="90" SelectedIndex="0">
                    <ComboBoxItem Content="50"/>
                    <ComboBoxItem Content="100"/>
                    <ComboBoxItem Content="200"/>
                </ComboBox>
                <ProgressRing x:Name="Busy" Width="18" Height="18" IsActive="False" Margin="6,0,0,0"/>
            </StackPanel>

            <!-- Search -->
            <Grid Grid.Row="1" Padding="10,0,10,6">
                <TextBox x:Name="SearchBox" PlaceholderText="Search subject or sender..." TextChanged="SearchBox_TextChanged"/>
            </Grid>

            <InfoBar x:Name="ErrorBar" Grid.Row="2" IsOpen="False" Severity="Error"
               Title="Failed to load messages" Message="Check your connection and try again."/>

            <!-- Grouped, card-style list -->
            <ListView Grid.Row="3" x:Name="InboxList"
                SelectionMode="Single"
                IsItemClickEnabled="True"
                ItemClick="InboxList_ItemClick"
                DoubleTapped="InboxList_DoubleTapped"
                PointerPressed="InboxList_PointerPressed"
                ItemsSource="{x:Bind GroupedSource.View, Mode=OneWay}" >
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <StaticResource ResourceKey="MonthHeaderTemplate"/>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="8,6,8,0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="{StaticResource CardBgBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Grid>
                                        <Border x:Name="Card"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                                            <ContentPresenter Margin="12"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        </Border>

                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Target="Card.Background" Value="{StaticResource CardHoverBrush}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Target="Card.Background" Value="{StaticResource CardHoverBrush}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Disabled"/>
                                            </VisualStateGroup>
                                            <VisualStateGroup x:Name="SelectionStates">
                                                <VisualState x:Name="Unselected"/>
                                                <VisualState x:Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Target="Card.Background" Value="{StaticResource CardSelectedBrush}"/>
                                                        <Setter Target="Card.BorderBrush"   Value="{StaticResource CardSelectedBrush}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

                <!-- Card content: Company (From) + Date (right) on first line; Title; Content preview -->
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:MailHeaderVM" xmlns:local="using:TabMail">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- First row: Sender Name (big) + date (right) + paperclip if attachments -->
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <TextBlock Grid.Column="0" Text="{x:Bind From}" FontSize="16" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                <FontIcon Grid.Column="1" Margin="8,0,0,0"
          FontFamily="Segoe MDL2 Assets" Glyph="&#xE16C;" Opacity="0.8"
          Visibility="{x:Bind HasAttachments, Converter={StaticResource BoolToVis}}"/>

                                <TextBlock Grid.Column="2" Text="{x:Bind DateDisplay}" Opacity="0.8"/>
                            </Grid>

                            <!-- Second row: Subject (slightly smaller) -->
                            <TextBlock Grid.Row="1" Text="{x:Bind Subject}" FontSize="14" TextTrimming="CharacterEllipsis"/>

                            <!-- Third row: tiny preview -->
                            <TextBlock Grid.Row="2" Text="{x:Bind Preview}" FontSize="12" Opacity="0.8"
                 TextTrimming="CharacterEllipsis"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Grid>

        <!-- RIGHT PANE -->
        <ContentPresenter x:Name="ReaderHost" Grid.Column="1"/>
    </Grid>
</Page>
