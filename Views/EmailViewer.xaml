<UserControl
    x:Class="TabMail.EmailViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wv2="using:Microsoft.UI.Xaml.Controls">
    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="12" Background="#101012">
        <StackPanel Grid.Row="0" Spacing="2">
            <TextBlock x:Name="SubjectText" FontSize="20" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="MetaText" Opacity="0.8" FontSize="12"/>
        </StackPanel>

        <StackPanel Grid.Row="1" x:Name="AttachPanel" Spacing="6" Visibility="Collapsed" Margin="0,8,0,8">
            <TextBlock Text="Attachments" FontWeight="SemiBold"/>
            <ItemsControl x:Name="AttachList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Reply" Click="Reply_Click"/>
                            <TextBlock Text="{Binding FileName}"/>
                            <TextBlock Text="{Binding SizeDisplay}" Opacity="0.7"/>
                            <Button Content="Save" Click="SaveAttachment_Click"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Rectangle Grid.Row="2" Height="1" Fill="#222"/>

        <Grid Grid.Row="3">
            <wv2:WebView2 x:Name="HtmlView" Visibility="Collapsed"/>
            <ScrollViewer x:Name="TextScroll" Visibility="Collapsed">
                <TextBlock x:Name="TextBody" FontFamily="Consolas" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
