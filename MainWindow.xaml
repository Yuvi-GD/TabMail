<Window
    x:Class="TabMail.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:Microsoft.UI.Xaml.Controls"
    Title="TabMail">
    <Grid RowDefinitions="Auto,*">
        <!-- Title bar area with TabView inside -->
        <Grid x:Name="TitleBarHost" Grid.Row="0" Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="72"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="DragRegion" Grid.Column="0" Background="Transparent"/>

            <Grid Grid.Column="1" ColumnDefinitions="Auto,Auto,*" VerticalAlignment="Stretch">
                <!-- Global left-pane toggle (already there) -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8" Padding="8,0,8,0">
                    <TextBlock Text="TabMail" FontWeight="SemiBold" Margin="0,0,6,0"/>
                    <ToggleButton x:Name="PaneToggle" Content="☰" Click="PaneToggle_Click" />
                </StackPanel>

                <!-- Account switcher -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8" Padding="0,0,8,0">
                    <ComboBox x:Name="AccountBox" Width="220" SelectionChanged="AccountBox_SelectionChanged"
                PlaceholderText="Select account"/>
                    <Button x:Name="AddAccountBtn" Content="＋" Click="AddAccountBtn_Click"/>
                </StackPanel>

                <!-- Tabs -->
                <ui:TabView x:Name="TopTabs"
                Grid.Column="2"
                AddTabButtonClick="TopTabs_AddTabButtonClick"
                TabCloseRequested="TopTabs_TabCloseRequested"
                SelectionChanged="TopTabs_SelectionChanged"/>
            </Grid>
        </Grid>

        <!-- Active page from selected tab lives here -->
        <Frame x:Name="RootFrame" Grid.Row="1"/>
    </Grid>
</Window>
